<%= link_to travel_request do %>
  <card id="<%= travel_request.id %>" size="full-width">
    <heading level="h2">Travel Request</heading>
    <text-style variation="default">
      <%= travel_request.creator %>
      <%= travel_request.start_date %>-<%= travel_request.end_date %>
      <%= travel_request.status %>
      <%= travel_request.purpose %>
      <%= travel_request.participation %>
      <%= travel_request.travel_category %>
    </text-style>
  </card>
<% end %>
