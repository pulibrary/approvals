<card size="full-width">
    <card-content>
        <heading level="h3" size="h3">
            History
          </heading>
          <ul class="notes">
            <%= render partial: "shared/request_note", collection:
              request.notes_and_changes, as: :note %>
        </ul>

    <% if render_edit %>
      <input-text id="travel_request_notes_content" name="travel_request[notes][content]" label="Notes" type="textarea" maxlength="9999" rows="10" width="expand"></input-text>
    <% end %>
    </card-content>
  </card>
