<p id="notice"><%= notice %></p>

<h1>State Change</h1>

<table>
  <thead>
    <tr>
      <th>Approver</th>
      <th>Request</th>
      <th>State Change</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @state_changes.each do |state_change| %>
      <tr>
        <td><%= state_change.approver %></td>
        <td><%= state_change.request %></td>
        <td><%= state_change.action %></td>
        <td><%= link_to 'Show', state_change %></td>
        <td><%= link_to 'Edit', edit_state_change_path(state_change) %></td>
        <td><%= link_to 'Destroy', state_change, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New State Change', new_state_change_path %>
