<h1>Absence Requests</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @absence_requests.each do |absence_request| %>
      <tr>
        <td><%= link_to 'Show', absence_request %></td>
        <td><%= link_to 'Edit', edit_absence_request_path(absence_request) %></td>
        <td><%= link_to 'Destroy', absence_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

