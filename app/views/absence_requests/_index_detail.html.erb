<%= link_to absence_request do %>
  <card id="<%= absence_request.id %>" size="full-width">
    <heading level="h2">Absence Request</heading>
    <text-style variation="default">
      <%= absence_request.creator %>
      <%= absence_request.absence_type %>
      <%= absence_request.start_date %>-<%= absence_request.end_date %>
      <%= absence_request.status %>
    </text-style>
  </card>
<% end %>
